<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tutorfinder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ParseStarterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.profile.RegisterPagePage3Activity"></activity>
        <activity android:name=".ui.profile.RegisterPagePage2Activity" />
        <activity android:name=".ui.profile.RegisterPagePage1Activity" />
        <activity android:name=".ui.profileRead.TutorProfileReadOnly" />
        <activity android:name="com.example.android.tutorfinder.ui.auth.RegisterActivity" />
        <activity android:name="com.example.android.tutorfinder.ui.auth.LoginActivity" />
        <activity android:name=".ui.profile.TutorProfileActivity" />
        <activity android:name=".ui.tutorList.Tutors" />
        <activity android:name=".ui.home.HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>